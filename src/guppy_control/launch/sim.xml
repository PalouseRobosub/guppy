<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="controller_debug" default="false" />
    <!-- to launch with controller debugging enabled use 'ros2 launch guppy_control sim.xml controller_debug:=true' -->

    <include file="$(find-pkg-share guppy_control)/launch/core.xml">
        <arg name="controller_debug" value="$(var controller_debug)" />
    </include>
</launch>